{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "downlevelIteration": true,
    "declaration": true,
    "composite": true,
    "outDir": "lib"
  }
}
